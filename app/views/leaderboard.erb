<h1>
  Leaderboard
</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Total score</th>
    </tr>
  </thead>
  <tbody>

    <% @leaderboard.each_with_index do |item, rank| %>
    <tr>
      <td><%= rank + 1 %></td>
      <td>
        <a href="/user/<%= item.user_id %>">
          <%= item.user_name %>
        </a>
      </td>
      <td>
        <%= item.user_score.to_i %>
      </td>
    </tr>
    <% end %>

  </tbody>
</table>
